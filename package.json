{
  "name": "prosemirror-highlight",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.10.0",
  "description": "A ProseMirror plugin to highlight code blocks",
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/prosemirror-highlight#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/prosemirror-highlight.git"
  },
  "bugs": "https://github.com/ocavue/prosemirror-highlight/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite playground",
    "build": "tsup",
    "lint": "eslint .",
    "fix": "eslint --fix . && prettier --write .",
    "prepublishOnly": "nr build",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "highlight.js": "^11.9.0",
    "prosemirror-model": "^1.19.3",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-view": "^1.32.4"
  },
  "peerDependenciesMeta": {
    "prosemirror-model": {
      "optional": true
    },
    "prosemirror-state": {
      "optional": true
    },
    "prosemirror-transform": {
      "optional": true
    },
    "prosemirror-view": {
      "optional": true
    },
    "highlight.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.8",
    "@ocavue/eslint-config": "^1.4.0",
    "@types/node": "^20.9.1",
    "eslint": "^8.52.0",
    "highlight.js": "^11.9.0",
    "prettier": "^3.0.3",
    "prosemirror-example-setup": "^1.2.2",
    "prosemirror-model": "^1.19.3",
    "prosemirror-schema-basic": "^1.2.2",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-view": "^1.32.4",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "renovate": {
    "extends": [
      "github>ocavue/config-renovate"
    ]
  }
}
